@model List<UserInfo>
@{ 
    ViewBag.Title ="Toplantı Katılım Listesi"; <!-- layout kısımlarındaki title kısmında gorunur dinamik olarak-->
    
}

<main class="text-center">
    <h1>Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad-Soyad</td>
                <td>Katılım durumu</td>
                <td></td>
            </tr>
        </thead>
        <tbody>

            @{int i=0;}
            @foreach(var user in Model)
            {

                var durum = user.WillAttend == true ? "Evet":"Hayır";

                var className = user.WillAttend == true? "table-success":"table-danger"; <!--katılım durumu evet ise arka plan yeşil hayırsa kırmızı olsun dedik-->

                @if(user.WillAttend==true){
                    i++;
                }

                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <p>Katılımcı sayısı: @i</p>
        </div>
    </div>
</main>